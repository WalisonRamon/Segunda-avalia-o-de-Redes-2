WORKDIR /app
COPY servidor_sequencial.py servidor_concorrente.py cliente.py test_runner.py plot_results.py requirements.txt /app/
# Se desejar usar o modo concorrente por padr√£o, altere o ENTRYPOINT no docker-compose
RUN mkdir -p /app/www
